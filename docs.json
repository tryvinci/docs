      "linkedin": "https://www.linkedin.com/company/tryvinci",
      "instagram": "https://www.instagram.com/try.vinci"
    },
    "links": [
      {
        "header": "Product",
        "items": [
          { "label": "Solutions", "href": "https://tryvinci.com#ai-actors" },
          { "label": "Pricing", "href": "https://tryvinci.com#pricing" },
