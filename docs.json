  "name": "Docs",
  "description": "Complete API documentation and guides for Vinci's AI-powered video generation, image creation, translation services, and digital content APIs",
  "theme": "mint",
  "favicon":"/favicon.svg",
  "colors": {
    "primary": "#21dad2",
    "light": "#f8fdfc",
    "dark": "#74d0cc"
  },
  "logo": {
    "light": "/logo/logo-light.svg",
    "dark": "/logo/logo-dark.svg",
    "alt": "Vinci",
    "href": "https://docs.tryvinci.com"
  },
  "navbar": {
    "logo": {
      "title": "Vinci",
      "light": "/logo/logo-light.svg",
      "dark": "/logo/logo-dark.svg",
      "href": "https://docs.tryvinci.com",
      "alt": "Vinci"
