          { "label": "LLMs Full", "href": "/llms-full.txt" }
        ]
      }
    ]
  },
  "navigation": {
    "anchors": [
      {
        "anchor": "Documentation",
        "icon": "book-open",
        "groups": [
          {
            "group": "Introduction",
            "icon": "house",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "Essentials",
            "icon": "key",
            "pages": [
              "essentials/authentication",
              "essentials/api-keys",
              "essentials/pricing",
              "docs/guides/getting-started",
              "docs/guides/billing-usage",
              "docs/guides/error-handling"
            ]
          },
          {
            "group": "Guides",
            "icon": "graduation-cap",
            "pages": [
              {
                "group": "Prompting Guides",
                "icon": "sparkles",
                "pages": [
                  "docs/guides/prompting/index",
                  "docs/guides/prompting/prompting-tips",
                  "docs/guides/prompting/text-to-image",
                  "docs/guides/prompting/image-to-image",
                  "docs/guides/prompting/video-generation"
                ]
              },
              {
                "group": "Platform Services",
                "icon": "rocket",
                "pages": [
                  "docs/guides/platform/ai-actors",
                  "docs/guides/platform/image-generation",
                  "docs/guides/platform/video-generation",
                  "docs/guides/platform/video-translation",
                  "docs/guides/platform/emote",
                  "docs/guides/platform/qr-code-generation"
                ]
              }
            ]
          },
          {
            "group": "API Reference",
            "icon": "square-terminal",
            "pages": [
              "docs/api-reference/video-generation",
              "docs/api-reference/image-to-video",
              "docs/api-reference/status-checking",
              "docs/api-reference/ai-actors",
              "docs/api-reference/translation",
              "docs/api-reference/emote",
              "docs/api-reference/qr-code"
            ]
          },
          {
            "group": "Platform",
            "icon": "cube",
            "pages": [
              "docs/platform/overview",
              "docs/guides/platform/index",
              "docs/guides/platform/platform-overview",
              "docs/platform/explore",
              "docs/platform/assets",
              "docs/platform/services"
            ]
          },
          {
            "group": "Product Updates",
            "icon": "clock",
            "pages": [
              "changelog"
            ]
          }
        ]
      }
    ]
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity"]
  },
  "styling": {
    "eyebrows": "breadcrumbs",
    "codeblocks": "system"
  },
  "appearance": {
    "default": "system",
    "strict": false
  },
  "thumbnails": {
    "appearance": "light",
    "background": "/logo/logo-light.svg"
  },
  "seo": {
    "indexing": "all",
    "metatags": {
      "og:site_name": "Vinci - AI Video & Image Generation API Documentation",
      "og:type": "website",
      "og:description": "Complete API documentation for Vinci's AI video generation, image creation, and digital content services",
      "og:image": "/logo/logo-light.svg",
      "twitter:card": "summary_large_image",
      "twitter:title": "Vinci API Documentation",
      "twitter:description": "AI-powered video and image generation API documentation with guides and examples",
      "robots": "index, follow",
      "theme-color": "#21dad2",
      "description": "Comprehensive documentation for Vinci's AI video generation, image creation, translation, and digital content APIs with code examples and integration guides"
    }
  },
  "css": {
    "navbar": {
      "cta": {
        "backgroundColor": "#21dad2",
        "color": "#ffffff",
        "fontWeight": "700",
        "borderRadius": "8px",
        "padding": "10px 20px",
        "fontSize": "15px",
        "border": "2px solid #21dad2",
        "boxShadow": "0 4px 6px -1px rgba(33, 218, 210, 0.1), 0 2px 4px -1px rgba(33, 218, 210, 0.06)",
        "transition": "all 0.2s ease-in-out",
        "&:hover": {
          "backgroundColor": "#74d0cc",
          "color": "#ffffff",
          "borderColor": "#74d0cc",
          "boxShadow": "0 10px 15px -3px rgba(33, 218, 210, 0.2), 0 4px 6px -2px rgba(33, 218, 210, 0.1)",
          "transform": "translateY(-1px)",
          "textDecoration": "none"
        },
        "&:active": {
          "backgroundColor": "#21dad2",
          "transform": "translateY(0px)",
          "boxShadow": "0 4px 6px -1px rgba(33, 218, 210, 0.1), 0 2px 4px -1px rgba(33, 218, 210, 0.06)"
        }
      }
    },
    "sidebar": {
      "backgroundColor": {
        "light": "#f8fdfc",
        "dark": "#0b0b0c"
      }
    },
    "content": {
      "backgroundColor": {
        "light": "#ffffff",
        "dark": "#0b0b0c"
      }
    },
    "links": {
      "color": "#21dad2",
      "&:hover": {
        "color": "#74d0cc"
      }
    },
    "buttons": {
      "primary": {
        "backgroundColor": "#21dad2",
        "color": "#ffffff",
        "border": "1px solid #21dad2",
        "&:hover": {
          "backgroundColor": "#74d0cc",
          "borderColor": "#74d0cc"
        }
      },
      "secondary": {
        "backgroundColor": "#b7edea",
        "color": "#0b0b0c",
        "border": "1px solid #b7edea",
        "&:hover": {
          "backgroundColor": "#f0dec6",
          "borderColor": "#f0dec6"
        }
      }
    },
    "cards": {
      "backgroundColor": {
        "light": "#ffffff",
        "dark": "#1a1a1a"
      },
      "borderColor": {
        "light": "#b7edea",
        "dark": "#74d0cc"
      },
      "&:hover": {
        "borderColor": "#21dad2",
        "boxShadow": "0 4px 12px rgba(33, 218, 210, 0.1)"
      }
    },
    "code": {
      "backgroundColor": {
        "light": "#f0dec6",
        "dark": "#1a1a1a"
      },
      "borderColor": {
        "light": "#b7edea",
        "dark": "#74d0cc"
      }
    }
  }
}
