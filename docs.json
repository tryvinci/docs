          { "label": "Curated", "href": "https://tryvinci.com/curated" },
          { "label": "Brand Custodian", "href": "https://tryvinci.com/brand-custodian" }
        ]
      },
      {
        "header": "Resources",
        "items": [
          { "label": "Wall of Love", "href": "https://tryvinci.com/wall-of-love" },
          { "label": "Blog", "href": "https://blog.tryvinci.com" },
          { "label": "Cookbook", "href": "https://blog.tryvinci.com/category/cookbook" },
          { "label": "Guides", "href": "https://blog.tryvinci.com/category/guides" },
          { "label": "Developer", "href": "https://docs.tryvinci.com" }
        ]
      },
      {
        "header": "Compare",
        "items": [
          { "label": "All Platforms", "href": "https://tryvinci.com/compare" },
          { "label": "vs HeyGen", "href": "https://tryvinci.com/compare/heygen" },
          { "label": "vs Synthesia", "href": "https://tryvinci.com/compare/synthesia" },
