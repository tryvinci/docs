{
  "$schema": "https://mintlify.com/docs.schema.json",
  "name": "Vinci Docs",
  "theme": "mint",
  "favicon":"https://app.tryvinci.com/images/favicon.ico",
  "colors": {
    "primary": "#111827",
    "light": "#ffffff",
    "dark": "#0b0b0c"
  },
  "logo": {
    "light": "/logo/logo-light.svg",
    "dark": "/logo/logo-dark.svg",
    "alt": "Vinci",
    "href": "https://docs.tryvinci.com"
  },
  "navbar": {
    "logo": {
      "title": "Vinci",
      "light": "/logo/logo-light.svg",
      "dark": "/logo/logo-dark.svg",
      "href": "https://docs.tryvinci.com",
      "alt": "Vinci"
    },
    "links": [
      { "label": "Support", "href": "mailto:team@tryvinci.com", "icon": "headset" },
      { "label": "Go to App", "href": "https://app.tryvinci.com", "icon": "rocket" },
      { "label": "Discord", "href": "https://tryvinci.com/discord", "icon": "discord" }

    ]
  },
  "search": { "enabled": true },
  "navigation": {
    "anchors": [
      {
        "anchor": "Documentation",
        "icon": "book-open",
        "groups": [
          {
            "group": "Introduction",
            "icon": "house",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "Essentials",
            "icon": "key",
            "pages": [
              "essentials/authentication",
              "essentials/api-keys",
              "essentials/pricing",
              "docs/guides/getting-started",
              "docs/guides/billing-usage",
              "docs/guides/error-handling"
            ]
          },
          {
            "group": "Guides",
            "icon": "graduation-cap",
            "pages": [
              {
                "group": "Prompting Guides",
                "icon": "sparkles",
                "pages": [
                  "docs/guides/prompting/index",
                  "docs/guides/prompting/prompting-tips",
                  "docs/guides/prompting/text-to-image",
                  "docs/guides/prompting/image-to-image"
                ]
              },
              {
                "group": "Platform Services",
                "icon": "rocket",
                "pages": [
                  "docs/guides/platform/ai-actors",
                  "docs/guides/platform/image-generation",
                  "docs/guides/platform/video-generation",
                  "docs/guides/platform/video-translation",
                  "docs/guides/platform/emote",
                  "docs/guides/platform/qr-code-generation"
                ]
              }
            ]
          },
          {
            "group": "API Reference",
            "icon": "square-terminal",
            "pages": [
              "docs/api-reference/video-generation",
              "docs/api-reference/image-to-video",
              "docs/api-reference/status-checking",
              "docs/api-reference/ai-actors",
              "docs/api-reference/translation",
              "docs/api-reference/emote",
              "docs/api-reference/qr-code"
            ]
          },
          {
            "group": "Platform",
            "icon": "cube",
            "pages": [
              "docs/platform/overview",
              "docs/guides/platform/index",
              "docs/guides/platform/platform-overview",
              "docs/platform/explore",
              "docs/platform/assets",
              "docs/platform/services"
            ]
          },
          {
            "group": "Meta",
            "icon": "clock",
            "pages": [
              "changelog"
            ]
          }
        ]
      }
    ]
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity"]
  },
  "seo": {
    "indexing": "all",
    "metatags": {
      "og:site_name": "Vinci Docs",
      "og:type": "website"
    }
  },
  "css": {
    "navbar": {
      "cta": {
        "backgroundColor": "#10b981",
        "color": "#ffffff",
        "fontWeight": "700",
        "borderRadius": "8px",
        "padding": "10px 20px",
        "fontSize": "15px",
        "border": "2px solid #10b981",
        "boxShadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
        "transition": "all 0.2s ease-in-out",
        "&:hover": {
          "backgroundColor": "#059669",
          "color": "#ffffff",
          "borderColor": "#059669",
          "boxShadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
          "transform": "translateY(-1px)",
          "textDecoration": "none"
        },
        "&:active": {
          "transform": "translateY(0px)",
          "boxShadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)"
        }
      }
    }
  }
}
